		<field name="@notice_show_assignto_form2content" type="rl_onlypro"
			   label="RL_FORM2CONTENT"
			   description="ATP_SHOW_PUBLISHING_OPTION" />
		
		<field name="@notice_show_assignto_k2" type="rl_onlypro"
			   label="RL_K2"
			   description="ATP_SHOW_PUBLISHING_OPTION" />
		
		<field name="@notice_show_assignto_zoo" type="rl_onlypro"
			   label="RL_ZOO"
			   description="ATP_SHOW_PUBLISHING_OPTION" />
		
		<field name="@notice_show_assignto_akeebasubs" type="rl_onlypro"
			   label="RL_AKEEBASUBS"
			   description="ATP_SHOW_PUBLISHING_OPTION" />
		
		<field name="@notice_show_assignto_hikashop" type="rl_onlypro"
			   label="RL_HIKASHOP"
			   description="ATP_SHOW_PUBLISHING_OPTION" />
		
		<field name="@notice_show_assignto_mijoshop" type="rl_onlypro"
			   label="RL_MIJOSHOP"
			   description="ATP_SHOW_PUBLISHING_OPTION" />
		
		<field name="@notice_show_assignto_redshop" type="rl_onlypro"
			   label="RL_REDSHOP"
			   description="ATP_SHOW_PUBLISHING_OPTION" />
		
		<field name="@notice_show_assignto_virtuemart" type="rl_onlypro"
			   label="RL_VIRTUEMART"
			   description="ATP_SHOW_PUBLISHING_OPTION" />
		
		<field name="@notice_show_assignto_cookieconfirm" type="rl_onlypro"
			   label="RL_COOKIECONFIRM"
			   description="ATP_SHOW_PUBLISHING_OPTION" />
		
		<field name="@notice_show_assignto_php" type="rl_onlypro"
			   label="RL_PHP"
			   description="ATP_SHOW_PUBLISHING_OPTION" />
	</fieldset>

	<fieldset name="RL_ACTIONLOG">
		<field name="enable_actionlog" type="radio" class="btn-group" default="1"
			   label="RL_ENABLE_ACTIONLOG"
			   description="RL_ENABLE_ACTIONLOG_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="actionlog_events" type="checkboxes" multiple="true"
			   default="create,update,delete,change_default,template_copy,files"
			   checked="create,update,delete,change_default,template_copy,files"
			   label="RL_ACTIONLOG_EVENTS"
			   description="RL_ACTIONLOG_EVENTS_DESC"
			   showon="enable_actionlog:1">
			<option value="create">RL_ACTION_CREATE</option>
			<option value="update">RL_ACTION_UPDATE</option>
			<option value="delete">RL_ACTION_DELETE</option>
			<option value="change_default">RL_ACTION_CHANGE_DEFAULT</option>
			<option value="template_copy">ATP_ACTION_TEMPLATE_COPY</option>
			<option value="files">ATP_ACTION_FOLDER_FILE_ACTIONS</option>
		</field>
	</fieldset>

	<fieldset name="notice_permissions" label="JCONFIG_PERMISSIONS_LABEL">
		<field name="@notice_rules" type="note" class="alert alert-info"
			   description="ATP_USE_CORE_RULES,&lt;a href=&quot;index.php?option=com_config&amp;view=component&amp;component=com_templates#permissions&quot;>,&lt;/a>" />
	</fieldset>
